<%= render 'shared/navigation_back' %>

<div class="mdc-list-group">
  <h3 class="mdc-list-group__subheader mdc-typography--headline5 sign-in">Editar Usuario</h3>
  <ul class="mdc-list growing-text-list">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <li class="sign-in-option">
        <%= f.label :email, 'Correo electrónico' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input #{'is-invalid' if resource.errors[:email].any?}" %>
        <% if current_user.provider %>
          <p class="text-muted">
            Si cambias tu correo electrónico, perderás el acceso con Google
          </p>
        <% end %>
        <%= render 'shared/invalid_feedback', resource: resource, field: :email %>
      </li>

      <li class="sign-in-option">
        <%= f.label :password, 'Nueva contraseña' %> <i>(Dejar en blanco si no lo quieres cambiar)</i>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> caracteres mínimo</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input #{'is-invalid' if resource.errors[:password].any?}" %>
        <%= render 'shared/invalid_feedback', resource: resource, field: :password %>
      </li>

      <li class="sign-in-option">
        <%= f.label :password_confirmation, 'Confirma tu nueva contraseña' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input #{'is-invalid' if resource.errors[:password_confirmation].any?}" %>
        <%= render 'shared/invalid_feedback', resource: resource, field: :password_confirmation %>
      </li>
      <% if current_user.provider.nil? %>
        <li class="sign-in-option">
          <%= f.label :current_password, 'Contraseña actual' %> <i>(Necesitamos tu contraseña actual para validar los cambios)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input #{'is-invalid' if resource.errors[:current_password].any?}" %>
          <%= render 'shared/invalid_feedback', resource: resource, field: :current_password %>
        </li>
      <% end %>
      <li class="sign-in-option sign-in">
        <%= f.button class: "mdc-button mdc-button--raised" do %>
          <span class='mdc-button__label'>
            Guardar
          </span>
        <% end %>
      </li>

    <% end %>

  </ul>
</div>
