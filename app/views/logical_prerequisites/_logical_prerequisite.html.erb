<div data-controller="prerequisite" >
  <a data-action="click->prerequisite#toggle" class="mdc-deprecated-list-item">
    <span class="mdc-deprecated-list-item__ripple"></span>
    <span class="material-icons toggle-collapse" data-prerequisite-target="button">chevron_right</span>
    <% if logical_prerequisite.logical_operator == "or" %>
      Alguno de los siguientes
    <% elsif logical_prerequisite.logical_operator == "and" %>
      Todos los siguientes
    <% elsif logical_prerequisite.logical_operator == "not" %>
      No debe tener
    <% elsif logical_prerequisite.logical_operator == "at_least" %>
      Debe tener al menos <%= logical_prerequisite.amount_of_subjects_needed %> de los siguientes
    <% end %>

    <%= render 'prerequisites/met_checkmark', prerequisite: logical_prerequisite %>
  </a>
  <div class="logical-prerequisite-operands" data-prerequisite-target="collapsable" >
    <%= render logical_prerequisite.operands_prerequisites %>
  </div>
</div>
