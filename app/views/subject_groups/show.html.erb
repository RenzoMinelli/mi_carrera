<% content_for :navigation_icon do %>
  <%= nav_icon("arrow_back", (request.referer || root_path)) %>
<% end %>

<% content_for :credits do %>
  <%= render 'shared/credits_counter' %>
<% end %>

<% content_for :profile_link do %>
  <%= action_icon("person", profile_path) %>
<% end %>

<div class="mdc-list-group">
  <h3 class="mdc-list-group__subheader mdc-typography--headline5">Grupo <%= @subject_group.name %></h3>
  <hr class="mdc-list-divider">

  <div class="mdc-list">
    <% @subjects.order(:semester).each do |subject| %>
        <%= link_to subject_path(subject), :class => "mdc-list-item" do %>
          <span class="mdc-list-item__text">
            <%= subject.short_name || subject.name %>
          </span>
          <% if bedel.approved?(subject) %>
            <span class="mdc-list-item__meta material-icons">done</span>
          <% elsif !bedel.able_to_do?(subject) %>
            <span class="mdc-list-item__meta material-icons">lock</span>
          <% end %>
        <% end %>
    <% end %>
  </div>
</div>
